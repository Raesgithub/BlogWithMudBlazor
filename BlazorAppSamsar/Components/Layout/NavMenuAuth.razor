@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject NavigationManager nav
@rendermode InteractiveServer
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">

        <Microsoft.AspNetCore.Components.Authorization.CascadingAuthenticationState>
            <AuthorizeView>
                <Authorized>
                    <a class="navbar-brand" href="">وبلاک 
                        @context.User.Claims.FirstOrDefault(a => a.Type == ClaimTypes.Surname)!.Value</a>
                </Authorized>
            </AuthorizeView>
        </Microsoft.AspNetCore.Components.Authorization.CascadingAuthenticationState>
        
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav  class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> مقالات
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick='() => nav.NavigateTo("/articles/add", true)'>
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> افزودن مقاله
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/articles/">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> مقالات من
            </NavLink>
        </div>

    </nav>
</div>

